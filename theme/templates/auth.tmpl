{{ define "auth" }}
  <!DOCTYPE html>
  <html lang="en">
    {{ template "head" . }}
    <body>
      <header class="index-header">
        <h1 id="site-title">
          <a href="/">
            {{ .Config.Title }}
          </a>
        </h1>
      </header>
      <div class="index-layout">
        <div class="forms">
          <div>
            <h2>Log in</h2>
            <form method="POST" class="form">
              <input
                type="text"
                name="token"
                id="chromogen-token"
                placeholder="Token"
              />
              <button id="chromogen-submit">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </body>
  </html>
{{ end }}
