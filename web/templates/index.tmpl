{{ define "index" }}
  <!DOCTYPE html>
  <html lang="en">
    {{ template "head" . }}
    <body>
      <script
        src="{{ RootResolver .Config.StaticDir `index.js` }}"
        defer
      ></script>
      <div class="index-layout">
        <header class="index-header">
          <h1 id="site-title">
            {{ .Config.Title }}
          </h1>
          <button id="viewmode-toggler">
            {{- if eq .Config.DefaultViewMode "gallery" -}}
              Gallery
            {{- else -}}
              Grid
            {{- end -}}
          </button>
        </header>
        <div
          id="thumbs"
          class="{{- if eq .Config.DefaultViewMode `gallery` -}}
            thumbs-gallery
          {{- else -}}
            thumbs-grid
          {{- end -}}"
        >
          {{ range $i, $id := .Photos.IDs }}
            {{ $img := $.Photos.Get $id }}
            {{ $idxp := IndexPhoto $img $i }}
            {{ template "thumb" $idxp }}
          {{ end }}
        </div>
      </div>
    </body>
  </html>
{{ end }}
